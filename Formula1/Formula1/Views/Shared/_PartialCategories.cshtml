
@using Formula1.BusinessLayer
@using Formula1.Entities

@{ 
    CategoryManager cm = new CategoryManager();
    List<Category> list = cm.GetCategories();
}

<p class="lead">Race Comments</p>
<div class="list-group">
    <a href="@Url.Action("Index","Home")" class="list-group-item">All</a>

    @foreach (Category cat in list)
    {
        <a href="/Home/ByCategory/@cat.Id" title="@cat.Description" class="list-group-item"><span class= "fa fa-arrow-right">
               </span>@cat.Title</a>
    }
</div>
